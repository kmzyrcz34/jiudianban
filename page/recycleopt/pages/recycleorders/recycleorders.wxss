/* page/recycleopt/pages/recycleorders/recycleorders.wxss */
@import "../../../../style/weui.wxss";
page {
  background-color: #f0f0f0 !important; /* 设置背景颜色 */
  font-size: 13px;
}
.index-hd {
    padding: 40px 40px 20px;
    text-align: center;
  }
  .index-bd {
    /* padding: 0 15px 20px; */
    padding: 0 15px 20px;
    /* background-color: rgb(191, 209, 224); */
  }
  .index-ft {
    padding-bottom: 10px;
    text-align: center;
  }
  .index-logo {
    /* width: 43px;
    height: 43px; */
    width: 43px;
    height: 43px;
  }
  .index-desc {
    margin-top: 10px;
    color: var(--weui-FG-1);
    /* font-size: 14px; */
    font-size: 14px;
  }
  
  
  .navigator-box {
    opacity: 0;
    position: relative;
    background-color: var(--weui-BG-2);
    line-height: 1.41176471;
    /* font-size: 32px; */
    font-size: 17px;
  
    transform: translateY(-50%);
    transition: .3s;
  }
  .navigator-box-show {
    opacity: 1;
    transform: translateY(0);
  }
  .navigator {
    /* padding: 10px 15px; */
    padding: 10px 15px;
    position: relative;
    display: flex;
    align-items: center;
  }
  .navigator:before {
    content: " ";
    position: absolute;
    /* left: 15px; */
    left: 15px;
    top: 0;
    /* right: 15px; */
    right: 15px;
    height: 1px;
    /* border-top: 1px solid var(--weui-FG-3); */
    border-top: 1px solid var(--weui-FG-3);
    color: var(--weui-FG-3);
  }
  .navigator:first-child:before {
    display: none;
  }
  .navigator-text {
    flex: 1;
  }
  .navigator-arrow {
    /* padding-right: 13px; */
    padding-right: 13px;
    position: relative;
  }
  .navigator-arrow:after {
    content: " ";
    display: inline-block;
    /* height: 9px;
    width: 9px;
    border-width: 1px 1px 0 0; */
    height: 9px;
    width: 9px;
    border-width: 1px 1px 0 0;
    border-color: var(--weui-FG-2);
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    /* margin-top: -4px; */
    margin-top: -4px;
    /* right: 14px; */
    right: 14px;
  }
  
  
  .order-list-item {
    /* margin: 10px 0; */
    margin: 10px 0;
    background:#dddddd;/*var(--weui-BG-2);*/
    border-radius: 5px;
    overflow: hidden;
  }
  .order-list-item:first-child {
    margin-top: 15px;
  }
  .order-list-text{
    flex: 1;
  }
  .order-detail-item{
    /* border-bottom: 0.5rpx solid coral; */
    display: flex; 
    flex-direction: row;
    align-items: center;
  }

  .order-detail-text{
    width:fit-content;
  }

  .data-input{
    width:180rpx;
  }

  .kind-list-img {
    /* width: 30px;
    height: 30px; */
    width: 30px;
    height: 30px;
    background-color: cornsilk;
  }
  .order-list-item-hd {
    /* padding: 15px; */
    padding: 10px;
    display: flex;
    align-items: center;
    flex-direction:row;
    /*background-color: crimson;*/
    transition: opacity .3s;
  }
  /* .order-list-item-hd-show {
    opacity: .2;
  } */
  .order-detail-item-bd {
    height: 0;
    overflow: hidden;
  }
  .order-detail-item-bd-show {
    padding: 0 10px;
    height: auto;
    /* border:1px solid #a1a1a1; */
    border-radius:5px;
    background:#dddddd;
  }
  .fw {
    font-weight: 700;
    font-size: 14px;
  }
  .flex-button {
    display: flex;
  }
  button {
    background-color: #fc664f;
    color: #fff;
    margin-top: 15px;
    font-weight: 400;
  }
  .block {
    position: relative;
    width: 240px;
    height: 240px;
    background: #fff;
    border-radius: 16rpx;
  }
  
  .block-title {
      width: 100%;
      height: 40px;
      background-color: #2196f3;
      color: #fff;
      line-height: 40px;
      text-align: center;
      /* border-radius: 5px; */
  }
  .image-image {
      width: 100%;
      height: 100px;
      background-color: #333;
  }
  .image {
      width: 100%;
      /* height: 300px; */
      height: 100%;
  }
  .mini-queren {
      background-color: #169bd5;
      color: #fff;
      font-weight: normal;
      width: 40px;
      margin-top: -7px;
  }